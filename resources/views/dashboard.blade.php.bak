    <script>
        // Graphique des mouvements
        const movementsCtx = document.getElementById('movementsChart').getContext('2d');
        new Chart(movementsCtx, {
            type: 'line',
            data: {
                labels: {!! json_encode($movementsChart['labels']) !!},
                datasets: [{
                    label: 'Entrées',
                    data: {!! json_encode($movementsChart['entrees']) !!},
                    borderColor: 'rgb(34, 197, 94)',
                    tension: 0.1
                }, {
                    label: 'Sorties',
                    data: {!! json_encode($movementsChart['sorties']) !!},
                    borderColor: 'rgb(239, 68, 68)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });

        // Graphique des catégories
        const categoriesCtx = document.getElementById('categoriesChart').getContext('2d');
        new Chart(categoriesCtx, {
            type: 'doughnut',
            data: {
                labels: {!! json_encode($categoriesChart['labels']) !!},
                datasets: [{
                    data: {!! json_encode($categoriesChart['data']) !!},
                    backgroundColor: [
                        'rgb(59, 130, 246)',
                        'rgb(16, 185, 129)',
                        'rgb(245, 158, 11)',
                        'rgb(239, 68, 68)',
                        'rgb(139, 92, 246)'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });

        function applyFilters() {
            const form = document.getElementById('filterForm');
            const formData = new FormData(form);
            const params = new URLSearchParams(formData);
            window.location.href = `${window.location.pathname}?${params.toString()}`;
        }

        window.movementsChartData = @json($movementsChart);
        window.categoriesChartData = @json($categoriesChart);
